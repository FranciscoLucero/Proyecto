<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.germa.proyecto">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:layout_gravity="center"
        android:allowBackup="true"
        android:icon="@mipmap/sai"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Menu_Principal"
            android:layout_gravity="center"
            android:label="Sistema SAI"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".InterfazAlumnos" />
        <activity android:name=".AlumnosDetalle" />
        <activity android:name=".DocentesDetalle"></activity>
    </application>

</manifest>